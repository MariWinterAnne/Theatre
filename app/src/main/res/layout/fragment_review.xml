<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentasion.ui.detail.ReviewListFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/layout_margin">

            <TextView
                android:id="@+id/text_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/decadancecursiv"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/second_color"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/text_age_restriction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/decadancecursiv"
                android:gravity="end"
                android:textColor="@color/second_color"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="@id/text_datetime"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/text_event_start_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textview_margin_top"
                android:textColor="@color/text_color"
                app:layout_constraintTop_toBottomOf="@id/text_datetime" />

            <TextView
                android:id="@+id/text_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textview_margin_top"
                android:fontFamily="@font/decadancecursiv"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/second_color"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/text_event_start_end"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/text_place_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textview_margin_top"
                android:drawablePadding="@dimen/drawable_padding"
                android:textColor="@color/text_color"
                app:drawableStartCompat="@drawable/theater"
                app:layout_constraintTop_toBottomOf="@id/text_place" />

            <TextView
                android:id="@+id/text_place_subway"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textview_margin_top"
                android:drawablePadding="@dimen/drawable_padding"
                android:textColor="@color/text_color"
                app:drawableStartCompat="@drawable/underground_station"
                app:layout_constraintTop_toBottomOf="@id/text_place_title" />

            <TextView
                android:id="@+id/text_place_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textview_margin_top"
                android:drawablePadding="@dimen/drawable_padding"
                android:textColor="@color/text_color"
                app:drawableStartCompat="@drawable/location"
                app:layout_constraintTop_toBottomOf="@id/text_place_subway" />

            <TextView
                android:id="@+id/text_place_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textview_margin_top"
                android:drawablePadding="@dimen/drawable_padding"
                android:textColor="@color/text_color"
                app:drawableStartCompat="@drawable/phone"
                app:layout_constraintTop_toBottomOf="@id/text_place_address" />

            <TextView
                android:id="@+id/text_place_site"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textview_margin_top"
                android:autoLink="web"
                android:drawablePadding="@dimen/drawable_padding"
                android:textColorLink="@color/second_color"
                app:drawableStartCompat="@drawable/website"
                app:layout_constraintTop_toBottomOf="@id/text_place_phone" />

            <TextView
                android:id="@+id/text_place_isclosed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textview_margin_top"
                android:textColor="@color/info_color"
                app:layout_constraintTop_toBottomOf="@id/text_place_site" />

            <TextView
                android:id="@+id/text_participants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textview_margin_top"
                android:fontFamily="@font/decadancecursiv"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/second_color"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/text_place_isclosed" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:alpha="0.7"
                android:src="@drawable/ic_mary_shadow"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_participants"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/text_participants_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textview_margin_top"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                app:layout_constraintTop_toBottomOf="@id/text_participants" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>
